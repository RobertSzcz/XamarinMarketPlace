<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMarketPlace.EditOfferPage"
             Title="Edit My Offer">


    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Padding="30">

            <StackLayout Orientation="Horizontal">
                <Label Text="Title:" WidthRequest="90" VerticalTextAlignment="Center"/>
                <Entry HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Price:" WidthRequest="90" VerticalTextAlignment="Center"/>
                <Entry HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Description:" WidthRequest="90" VerticalTextAlignment="Center"/>
                <Editor HorizontalOptions="FillAndExpand"/>
            </StackLayout>

            <Button Text="Change Picture" />
            <Button Text="Save Changes" IsEnabled="False"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>